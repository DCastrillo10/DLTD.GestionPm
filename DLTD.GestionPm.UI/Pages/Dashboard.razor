@page "/"
@* El atributo @page "/" define que este componente 
    es la página de inicio (la raíz del sitio) 
*@

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard de Mantenimiento Preventivo (PM)</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>150</h3>
                        <p>Total Máquinas PM</p>
                    </div>
                    <div class="icon">
                        <i class="bi bi-gear-fill"></i>
                    </div>
                    <a href="#" class="small-box-footer">
                        Ver Inventario <i class="bi bi-arrow-right-circle-fill"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>85<sup style="font-size: 20px">%</sup></h3>
                        <p>PMs Completados (Mes)</p>
                    </div>
                    <div class="icon">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <a href="#" class="small-box-footer">
                        Ver Gráfico <i class="bi bi-arrow-right-circle-fill"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>44</h3>
                        <p>PMs Pendientes (Semana)</p>
                    </div>
                    <div class="icon">
                        <i class="bi bi-calendar-check-fill"></i>
                    </div>
                    <a href="#" class="small-box-footer">
                        Ver Rutas <i class="bi bi-arrow-right-circle-fill"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>6</h3>
                        <p>Técnicos Activos Hoy</p>
                    </div>
                    <div class="icon">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <a href="#" class="small-box-footer">
                        Ver Personal <i class="bi bi-arrow-right-circle-fill"></i>
                    </a>
                </div>
            </div>

        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Listado de Órdenes de Mantenimiento Preventivo (PM)</h3>
                        <div class="card-tools">
                            <a href="/pm-nuevo" class="btn btn-sm btn-primary">
                                <i class="bi bi-plus-lg"></i> Crear Nueva WO
                            </a>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>WO</th>
                                        <th>Modelo</th>
                                        <th>Máquina</th>
                                        <th>Ruta</th>
                                        <th>% Completado</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (PmData == null)
                                    {
                                        <tr><td colspan="6" class="text-center">Cargando datos...</td></tr>
                                    }
                                    else
                                    {
                                        @foreach (var pm in PmData)
                                        {
                                            <tr>
                                                <td>@pm.WorkOrder</td>
                                                <td>@pm.Modelo</td>
                                                <td>@pm.Maquina</td>
                                                <td>@pm.Ruta</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="progress-bar"
                                                             style="width: @(pm.PorcentajeCompletado)%"
                                                             role="progressbar"
                                                             aria-valuenow="@pm.PorcentajeCompletado"
                                                             aria-valuemin="0"
                                                             aria-valuemax="100">
                                                        </div>
                                                    </div>
                                                    <small class="ms-1">@pm.PorcentajeCompletado%</small>
                                                </td>
                                                <td class="text-center">
                                                    <button class="btn btn-sm btn-info me-1" title="Ver Detalle">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-success me-1" title="Iniciar/Continuar">
                                                        <i class="bi bi-play-fill"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-danger" title="Cancelar">
                                                        <i class="bi bi-x-circle"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card-footer clearfix">
                        <ul class="pagination pagination-sm m-0 float-end">
                            <li class="page-item"><a class="page-link" href="#">«</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">»</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


