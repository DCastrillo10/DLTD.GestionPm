@using DLTD.GestionPm.Dto.Response.Marca
@using DLTD.GestionPm.Dto.Response.Modelo


@attribute [Route(Routes.ListaModelos)]
@layout MainLayout
@attribute [Authorize(Roles = CatalogRoles.Administrador)]

@inject IModeloProxy modeloProxy;
@inject IMarcaProxy marcaProxy;
@inject IToastService toastService;
@inject SweetAlertService swal;

<h3 class="uk-text-bold uk-margin-small-bottom">Listado de modelos</h3>

<GroupBox Titulo="Buscar Modelos">
    <Contenido>
        <div class="uk-grid-small" uk-grid>
            <!-- Input + botones -->
            <div class="uk-width-2-3@s">
                <div class="uk-grid-small uk-flex-middle" uk-grid>                    
                    <div class="uk-width-expand">
                        <input class="uk-input uk-form-small" placeholder="Buscar por descripción..." @bind="Request.Filter" />
                    </div>                    
                    <div>
                        <button class="uk-button uk-button-default uk-button-small" @onclick="Listar">
                            <i class="icon-feather-search"></i>
                        </button>
                    </div>                    
                    <div>
                        <button class="uk-button uk-button-default uk-button-small" @onclick="OnRefrescar">
                            <i class="icon-feather-rotate-ccw"></i>
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="uk-width-1-3@s uk-flex uk-flex-right">
                <button class="uk-button btn-corporativo uk-button-small" style="padding: 6px 18px;" @onclick="OnNuevo">
                    <i class="icon-feather-plus uk-margin-small-right"></i>
                    Nuevo
                </button>
            </div>

        </div>
    </Contenido>

</GroupBox>

<!-- Tabla -->
<div class="uk-overflow-auto tabla-container">    
    <table class="uk-table uk-table-striped uk-table-hover uk-table-small uk-table-middle tabla-compacta">

        <thead class="table-header">
            <tr>
                <th>Id</th>
                <th>Referencia</th>
                <th>Descripción</th>
                <th>Marca</th>
                <th>Status</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Listado)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Referencia</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Marca</td>
                    <td>@item.Status</td>
                    <td class="uk-text-center">

                        <button class="uk-icon-button uk-margin-small-right" uk-tooltip="Editar" @onclick="() => OnShowEditar(item)">
                            <i class="icon-feather-edit"></i>
                        </button>                        
                        
                        <button class="uk-icon-button uk-button-danger" uk-tooltip="Eliminar"  @onclick="() => OnEliminar(item)">
                            <i class="icon-feather-trash-2"></i>
                        </button>

                    </td>
                </tr>
            }
            
        </tbody>
    </table>
</div>

<Modal Title="Modelos" Size="ModalSize.Regular" UseStaticBackdrop=true @ref="ModalModelos">
    <BodyTemplate>         
        <FrmModelo Request="RequestModelo" OnGuardarEvent="OnGuardar" OnCancelarEvent="() => ModalModelos.HideAsync()" ListadoMarcas="ListadoMarcas" />
    </BodyTemplate>
</Modal>

<Loading Isloading="isLoading" />

@code {
    public List<ListaModeloResponse> Listado { get; set; } = new();    
    public PaginationRequest Request { get; set; } = new();
    public Modal ModalModelos { get; set; } = new();
    public bool isLoading { get; set; }

    public ModeloRequest RequestModelo { get; set; } = new();
    public List<ListaMarcaResponse> ListadoMarcas { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await Listar();
        await ListarMarcas();
    }

    public async Task ListarMarcas()
    {
        isLoading = true;
        try
        {
            var respuesta = await marcaProxy.Listar(Request);
            if (respuesta?.Result != null)
            {
                ListadoMarcas = respuesta.Result.ToList();
            }
        }
        catch (Exception ex)
        {
            toastService.ShowError(ex.Message);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    public async Task Listar()
    {
        isLoading = true;
        try
        {
            var respuesta = await modeloProxy.Listar(Request);
            if(respuesta?.Result != null)
            {
                Listado = respuesta.Result.ToList();
            }
        }
        catch (Exception ex)
        {
            toastService.ShowError(ex.Message);            
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    public async Task OnRefrescar()
    {
        Request = new();
        await Listar();
    }

    public async Task OnNuevo()
    {
        RequestModelo = new();
        await ModalModelos.ShowAsync();
    }

    public async Task OnShowEditar(ListaModeloResponse item)
    {
        await ObtenerPorId(item.Id);
        await ModalModelos.ShowAsync();
    }

    public async Task OnGuardar()
    {
        isLoading = true;
        try
        {
            if(RequestModelo.Id == 0)
            {                
                if (Listado.Any(x => string.Equals(x.Referencia, RequestModelo.Referencia, StringComparison.OrdinalIgnoreCase)))
                {
                    toastService.ShowError("Ya existe un modelo con esa referencia");
                    return; 
                }

                var respuesta = await modeloProxy.Registrar(RequestModelo);
                if (respuesta != null)
                {
                    await Listar();
                    await ModalModelos.HideAsync();
                    toastService.ShowSuccess("Modelo registrada exitosamente");
                }
            }
            else
            {                
                if (Listado.Any(x => string.Equals(x.Referencia, RequestModelo.Referencia, StringComparison.OrdinalIgnoreCase) && x.Id != RequestModelo.Id))
                {
                    toastService.ShowError("Ya existe un modelo con esa referencia");
                    return; 
                }

                var respuesta = await modeloProxy.Actualizar(RequestModelo.Id, RequestModelo);
                if (respuesta != null)
                {
                    await Listar();
                    await ModalModelos.HideAsync();
                    toastService.ShowSuccess("Modelo actualizada exitosamente");
                }
            }
        }
        catch (Exception ex)
        {
            toastService.ShowError(ex.Message);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    public async Task OnEliminar(ListaModeloResponse item)
    {
        var respuesta = await swal.FireAsync(new SweetAlertOptions
        {
            Title = "Estas seguro en eliminar este registro?",
            Text = $"Eliminar {item.Descripcion}.",
            Icon = SweetAlertIcon.Question,
            ShowCancelButton = true,
            ConfirmButtonText = "Si",
            CancelButtonText = "No"
        });

        if (respuesta.IsConfirmed)
        {
            await Eliminar(item.Id);
        }
    }

    public async Task Eliminar(int id)
    {
        isLoading = true;
        try
        {
            var response = await modeloProxy.Eliminar(id);
            if(response != null)
            {
                await Listar();
                toastService.ShowSuccess("Registro eliminado correctamente");
            }

        }
        catch (Exception ex)
        {
            toastService.ShowError(ex.Message);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    public async Task ObtenerPorId(int id)
    {
        isLoading = true;
        try
        {
            var response = await modeloProxy.ObtenerPorId(id);
            if (response?.Result != null)
            {
                RequestModelo = new()
                    {
                        Id = response.Result.Id,
                        Referencia = response.Result.Referencia,
                        Descripcion = response.Result.Descripcion,
                        IdMarca = response.Result.IdMarca,
                        Status = response.Result.Status
                    };
            }

        }
        catch (Exception ex)
        {
            toastService.ShowError(ex.Message);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}
