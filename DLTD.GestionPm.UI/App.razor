@using DLTD.GestionPm.UI.Layout.Main
@using DLTD.GestionPm.UI.Pages.Security

@inject NavigationManager Navegador

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        @if (routeData.PageType == typeof(Login))
        {
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@null" >

            </AuthorizeRouteView>
        }
        else
        {
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (!context.User.Identity!.IsAuthenticated)
                    {
                        Navegador.NavigateTo("/login");
                    }
                    else
                    {
                        Navegador.NavigateTo("/not-authorized");
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
        }
        
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
